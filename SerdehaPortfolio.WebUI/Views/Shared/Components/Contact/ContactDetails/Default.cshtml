@model Contact

<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    <div class="mt-3 px-1">
        <div class="h5">@Model.Title</div>
        @Html.Raw(Model.Description)
    </div>
    <div class="mt-53 px-1">
        <div class="row">
            @if (!string.IsNullOrEmpty(Model.Email))
            {
                <div class="col-sm-2">
                    <div class="pb-1">E-posta:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@Model.Email</div>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Phone))
            {
                <div class="col-sm-2">
                    <div class="pb-1">Telefon:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@Model.Phone</div>
                </div>
            }
        </div>
    </div>
</div>