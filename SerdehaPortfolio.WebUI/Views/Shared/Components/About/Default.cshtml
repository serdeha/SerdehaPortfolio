@model About

<div class="section pt-4 px-3 px-lg-4" id="about">
        <div class="container-narrow">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h4 my-2">@Model.Title</h2>
                    <p>@Model.Description</p>
                    <div class="row mt-3">
                        @if (!string.IsNullOrEmpty(Model.Age))
                        {
                            <div class="col-sm-2">
                                <div class="pb-1">Yaş:</div>
                            </div>
                            <div class="col-sm-10">
                                <div class="pb-1 fw-bolder">@Model.Age</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Mail))
                        {
                            <div class="col-sm-2">
                                <div class="pb-1">E-posta:</div>
                            </div>
                            <div class="col-sm-10">
                                <div class="pb-1 fw-bolder">@Model.Mail</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <div class="col-sm-2">
                                <div class="pb-1">Telefon:</div>
                            </div>
                            <div class="col-sm-10">
                                <div class="pb-1 fw-bolder">@Model.Phone</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <div class="col-sm-2">
                                <div class="pb-1">Adres:</div>
                            </div>
                            <div class="col-sm-10">
                                <div class="pb-1 fw-bolder">@Model.Address</div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="~/img/about/@Model.ImageUrl" width="400" height="400" alt="@Model.Title"/></div>
            </div>
        </div>
    </div>