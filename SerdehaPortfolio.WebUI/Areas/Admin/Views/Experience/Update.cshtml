@model Experience

@{
    ViewBag.Title = $"{Model.Name} Güncelleniyor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Güncelle</h4>
            <form class="forms-sample" asp-area="Admin" asp-action="Update" asp-controller="Experience" method="post" enctype="multipart/form-data">

                @if (ViewContext.ModelState.ErrorCount > 0)
                {
                    <div class="form-group alert alert-danger" asp-validation-summary="All"></div>
                }
                
                <input type="hidden" asp-for="ExperienceId" />
                <input type="hidden" asp-for="ImageUrl" />                

                <div class="form-group">
                    <label class="form-control-label">Deneyim Adı</label>
                    <input type="text" class="form-control" placeholder="Deneyim Adı Giriniz" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-control-label">Deneyim Tarihi</label>
                    <input type="text" class="form-control" placeholder="Deneyim Tarihi Giriniz" asp-for="Date">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label class="form-control-label">Şu anki Deneyim Ikonu</label>
                    <img src="~/img/experiences/@Model.ImageUrl" style="width: 70px;height: 70px" class="form-control img-fluid img-thumbnail bg-white" />
                </div>

                <div class="form-group">
                    <label class="form-control-label">Deneyim Ikonu</label>
                    <input type="file" class="form-control-file" asp-for="FormFile">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-control-label">Deneyim Açıklaması</label>
                    <textarea class="form-control" rows="10" cols="3" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a class="btn btn-danger" asp-area="Admin" asp-controller="Experience" asp-action="Index">Vazgeç</a>
            </form>
        </div>
    </div>
</div>