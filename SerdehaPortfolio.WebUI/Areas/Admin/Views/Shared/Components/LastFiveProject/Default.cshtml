@model List<Portfolio>

@if (Model.Count > 0)
{
    <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                        <h4 class="card-title mb-1">Son @Model.Count Proje</h4>
                        <p class="text-muted mb-1">Site İsmi</p>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="preview-list">
                                @foreach (var portfolio in Model)
                                {
                                    <div class="preview-item border-bottom">
                                        <div class="preview-thumbnail">
                                            <div class="preview-icon bg-primary">
                                                <img src="~/img/portfolios/@portfolio.ImageUrl" alt="@portfolio.Name" style="width: 50px;height: 50px" />
                                            </div>
                                        </div>
                                        <div class="preview-item-content d-sm-flex flex-grow">
                                            <div class="flex-grow">
                                                <h6 class="preview-subject">@portfolio.Name</h6>
                                                <p class="text-muted mb-0">@portfolio.WebsiteUrl</p>
                                            </div>
                                            <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                                <p class="text-muted">@portfolio.WebsiteName</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}
else
{
    <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="alert alert-info">Herhangi bir proje paylaşılmamış.</p>
                </div>
            </div>
        </div>
}