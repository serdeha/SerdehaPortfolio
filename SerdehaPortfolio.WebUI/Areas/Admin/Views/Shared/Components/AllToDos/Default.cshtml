@model List<ToDoList>

<div class="col-md-12 col-xl-4 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">To do Listem</h4>
                    <div class="add-items d-flex">
                        <input type="text" class="form-control todo-list-input" placeholder="Bir şeyler gir..">
                        <button class="add btn btn-primary todo-list-add-btn">Ekle</button>
                    </div>
                    <div class="list-wrapper">
                        <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                            @{
                                bool status = false;
                            }
                            @foreach (var toDo in Model)
                            {
                                status = toDo.Status;
                                <li class="@(status == false ? "":"completed")">
                                    <div class="form-check form-check-primary">
                                        <label class="form-check-label">
                                            <input class="checkbox" type="checkbox" @(status == false ? "":"checked")> @toDo.Content

                                        </label>
                                    </div>
                                    <i class="remove mdi mdi-close-box"></i>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>