@model Service
@{
    ViewBag.Title = "Hizmet Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Ekle</h4>
            <form asp-area="Admin" asp-action="Add" asp-controller="Service" enctype="multipart/form-data" method="post">

                @if (ViewContext.ModelState.ErrorCount > 0)
                {
                    <div class="form-group alert alert-danger" asp-validation-summary="All"></div>
                }

                <div class="form-group">
                    <label class="form-control-label">Hizmet Adı</label>
                    <input type="text" class="form-control" placeholder="Hizmet Adı Giriniz" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-control-label">Hizmet Ikonu</label>
                    <input type="file" class="form-control-file" asp-for="FormFile">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a class="btn btn-danger text-right" asp-area="Admin" asp-controller="Service" asp-action="Index">Vazgeç</a>
            </form>
        </div>
    </div>
</div>